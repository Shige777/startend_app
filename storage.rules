rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Profile images
    match /profiles/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Post images
    match /posts/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Community images
    match /communities/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
} 